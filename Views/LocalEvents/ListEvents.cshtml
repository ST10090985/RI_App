@using System.Linq
@model IEnumerable<RI_App.Models.LocalEvent>

@{
    ViewData["Title"] = "Local Events and Announcements";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Local Events and Announcements</h2>

    <!-- Add Event button -->
    <div class="mb-3 text-end">
        <a asp-controller="LocalEvents" asp-action="AddEvent" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Event
        </a>
    </div>

    <!-- 🔍 Search Form -->
    <form asp-controller="LocalEvents" asp-action="ListEvents" method="get" class="row g-3 mb-4">
        <div class="col-md-6">
            <label for="category" class="form-label">Search by Category</label>
            <input type="text" name="category" id="category" value="@Context.Request.Query["category"]"
                   class="form-control" placeholder="Type a category (e.g., Sanitation, Roads, Utilities)" />
        </div>

        <div class="col-md-4">
            <label for="date" class="form-label">Search by Date</label>
            <input type="date" name="date" id="date" value="@Context.Request.Query["date"]" class="form-control" />
        </div>

        <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-primary w-100">Search</button>
        </div>
    </form>

    <!-- ✅ Results Table -->
    @if (Model == null || !Model.Any())
    {
        <p class="text-muted text-center">No matching events found.</p>
    }
    else
    {
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Category</th>
                    <th>Description</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ev in Model)
                {
                    <tr>
                        <td>@ev.Title</td>
                        <td>@ev.Category</td>
                        <td>@ev.Description</td>
                        <td>@ev.Date.ToString("dd MMM yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <!-- 💡 Recommendations Section -->
    @if (ViewBag.Recommendations != null && ((IEnumerable<RI_App.Models.LocalEvent>)ViewBag.Recommendations).Any())
    {
        <div class="mt-5">
            <h4>Recommended Events (Based on Recent Searches)</h4>
            <ul class="list-group">
                @foreach (var rec in (IEnumerable<RI_App.Models.LocalEvent>)ViewBag.Recommendations)
                {
                    <li class="list-group-item">
                        <strong>@rec.Title</strong> — @rec.Category
                        <span class="text-muted">(@rec.Date.ToString("dd MMM"))</span>
                    </li>
                }
            </ul>
        </div>
    }
</div>
