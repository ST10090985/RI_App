@model IEnumerable<RI_App.Models.ReportIssue>

<div class="container mt-5">
    <h2>Reported Issues</h2>
    <hr />

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Location</th>
                <th>Category</th>
                <th>Description</th>
                <th>Date Reported</th>
                <th>Attachment</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var issue in Model)
            {
                <tr>
                    <td>@issue.Location</td>
                    <td>@issue.Category</td>
                    <td>@issue.Description</td>
                    <td>@issue.DateReported.ToString("g")</td>
                    <td>
                        @if (!string.IsNullOrEmpty(issue.AttachmentPath))
                        {
                            <a href="@issue.AttachmentPath" target="_blank" class="btn btn-sm btn-outline-primary">View</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Main Menu</a>
</div>
