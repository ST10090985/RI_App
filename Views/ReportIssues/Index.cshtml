@using System.Linq
@model IEnumerable<RI_App.Models.ReportIssue>


@if (Model == null || !Model.Any())
{
    <p class="text-muted">No issues have been reported yet.</p>
}
else
{
    <!-- Table of reported issues -->
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Location</th>
                <th>Category</th>
                <th>Description</th>
                <th>Date Reported</th>
                <th>Attachment</th>
            </tr>
        </thead>
        <tbody>
            @* Loop through each reported issue and display details *@
            @foreach (var issue in Model)
            {
                <tr>
                    <td>@issue.Location</td>
                    <td>@issue.Category</td>
                    <td>@issue.Description</td>
                    <td>@issue.DateReported.ToString("g")</td>
                    <td>
                        @* If an attachment exists, show a text name to view it *@
                        @if (!string.IsNullOrEmpty(issue.AttachmentPath))
                        {
                            var fileName = System.IO.Path.GetFileName(issue.AttachmentPath);
                            <a href="@issue.AttachmentPath" target="_blank">@fileName</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
