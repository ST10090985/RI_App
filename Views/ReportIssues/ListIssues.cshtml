@model IEnumerable<RI_App.Models.ReportIssue>

@{
    ViewData["Title"] = "Reported Issues";
}

<div class="container mt-5">
    <h2>Reported Issues</h2>
    <hr />

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    @if (!Model.Any())
    {
        <p>No issues have been reported yet.</p>
    }
    else
    {
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Location</th>
                    <th>Category</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Date Reported</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var issue in Model)
                {
                    <tr>
                        <td>@issue.Id</td>
                        <td>@issue.Location</td>
                        <td>@issue.Category</td>
                        <td>@issue.Description</td>
                        <td>@issue.Status</td>
                        <td>@issue.DateReported.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <form asp-action="UpdateStatus" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@issue.Id" />
                                <input type="hidden" name="newStatus" value="Resolved" />
                                <button type="submit" class="btn btn-sm btn-success">Resolve</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <form asp-action="RemoveNext" method="post" class="mt-3">
        <button type="submit" class="btn btn-danger">Remove Oldest Issue</button>
    </form>

    <a asp-action="Create" class="btn btn-secondary mt-3">Back to Report Form</a>
</div>
