@model IEnumerable<RI_App.Models.ReportIssue>

@{
    ViewData["Title"] = "Reported Issues";
}

<div class="container mt-5">
    <h2>Reported Issues</h2>
    <hr />

    <!-- Display feedback messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    else if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    @if (!Model.Any())
    {
        <p class="text-muted">No issues have been reported yet.</p>
    }
    else
    {
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Location</th>
                    <th>Category</th>
                    <th>Description</th>
                    <th>Date Reported</th>
                    <th>Attachment</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var issue in Model)
                {
                    <tr>
                        <td>@issue.Location</td>
                        <td>@issue.Category</td>
                        <td>@issue.Description</td>
                        <td>@issue.DateReported.ToString("g")</td>
                        <td>
                            @if (!string.IsNullOrEmpty(issue.AttachmentPath))
                            {
                                <a href="@issue.AttachmentPath" target="_blank">
                                    @System.IO.Path.GetFileName(issue.AttachmentPath)
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">No file</span>
                            }
                        </td>

                        <!-- Status with color-coded badge -->
                        <td>
                            @if (issue.Status == "Pending")
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                            else if (issue.Status == "Resolved")
                            {
                                <span class="badge bg-success">Resolved</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@issue.Status</span>
                            }
                        </td>

                        <!-- Update status form -->
                        <td>
                            <form asp-action="UpdateStatus" method="post" class="d-flex gap-2 align-items-center">
                                <input type="hidden" name="id" value="@issue.Id" />
                                <select name="newStatus" class="form-select form-select-sm w-auto">
                                    <option value="Pending" selected="@("Pending" == issue.Status)">Pending</option>
                                    <option value="Resolved" selected="@("Resolved" == issue.Status)">Resolved</option>
                                </select>
                                <button type="submit" class="btn btn-sm btn-primary">Update</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Remove the oldest issue from the queue -->
        <form asp-action="RemoveNext" method="post" class="mt-3">
            <button type="submit" class="btn btn-danger">
                🗑️ Remove Next Issue
            </button>
        </form>
    }

    <!-- Back navigation -->
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-3">Back to Main Menu</a>
</div>
