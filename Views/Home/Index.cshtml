@{
    ViewData["Title"] = "Main Menu";
}

<div class="container mt-5">
    <div class="text-center">
        <!-- Page Heading -->
        <h2>Main Menu</h2>
        <hr />

        <!-- Button grid for main navigation -->
        <div class="d-grid gap-3 col-6 mx-auto">
            <!-- Navigate to the 'Report Issues' page -->
            <a class="btn btn-primary btn-lg" asp-controller="ReportIssues" asp-action="Create">Report Issues</a>

            <!-- Navigate to the 'View Issues' page -->
            <a class="btn btn-success btn-lg" asp-controller="ReportIssues" asp-action="ListIssues">View Reported Issues</a>

            <!-- Navigate to the 'ListEvents' page -->
            <a class="btn btn-info btn-lg" asp-controller="LocalEvents" asp-action="ListEvents">Local Events & Announcements</a>

            <!-- Placeholder buttons for future features that will be implemented later -->
            <button class="btn btn-secondary btn-lg" disabled>Service Request Status (Coming Soon)</button>
        </div>
    </div>
</div>
