@model RI_App.Models.ServiceRequest

@{
    ViewData["Title"] = "Update Status";
}

<div class="container mt-5">
    <h2>Update Request Status</h2>
    <hr />

    <form asp-action="UpdateStatus" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label">Request ID</label>
            <input type="text" class="form-control" value="@Model.Id" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="Status" class="form-label"></label>
            <select asp-for="Status" class="form-select">
                <option>Pending</option>
                <option>In Progress</option>
                <option>Completed</option>
                <option>Cancelled</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="Progress" class="form-label">Progress (%)</label>
            <input asp-for="Progress" type="number" class="form-control" min="0" max="100" />
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
