@model IEnumerable<RI_App.Models.ServiceRequest>

@{
    ViewData["Title"] = "Service Requests";
}

<div class="container mt-5">
    <h2>Service Requests</h2>
    <hr />

    <a asp-controller="ServiceRequest" asp-action="Create" class="btn btn-primary mb-3">New Service Request</a>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    @if (!Model.Any())
    {
        <p class="text-muted">No service requests found.</p>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Priority</th>
                    <th>Progress</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var req in Model)
                {
                    <tr>
                        <td>@req.Id</td>
                        <td>@req.Description</td>
                        <td>@req.Status</td>
                        <td>
                            @(req.Priority == 3 ? "High" : req.Priority == 2 ? "Medium" : "Low")
                        </td>
                        <td>@req.Progress %</td>
                        <td>
                            <a asp-action="UpdateStatus" asp-route-id="@req.Id" class="btn btn-sm btn-outline-primary">Update</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>